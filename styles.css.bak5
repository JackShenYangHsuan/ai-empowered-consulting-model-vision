    justify-content: center;
    z-index: 9999;
    padding: 20px;
}

.modal.active {
    display: flex;
    animation: modalFadeIn 0.2s ease;
}

@keyframes modalFadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.modal-dialog {
    background: white;
    border-radius: 0;
    max-width: 480px;
    width: 100%;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--gray-200);
    animation: modalSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-20px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    border-bottom: 1px solid var(--gray-200);
}

.modal-header h2 {
    font-size: 16px;
    font-weight: 600;
    color: var(--gray-900);
    margin: 0;
    letter-spacing: -0.015em;
}

.modal-close {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    border-radius: 0;
    font-size: 24px;
    color: var(--gray-500);
    cursor: pointer;
    transition: all 0.2s ease;
    line-height: 1;
    padding: 0;
}

.modal-close:hover {
    background: var(--gray-100);
    color: var(--gray-900);
}

.modal-body {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.modal-field {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.modal-field label {
    font-size: 13px;
    font-weight: 600;
    color: var(--gray-700);
    letter-spacing: -0.01em;
}

.modal-input {
    width: 100%;
    padding: 6px 10px;
    border: 1px solid var(--gray-300);
    border-radius: 0;
    font-size: 14px;
    font-family: inherit;
    transition: all 0.2s ease;
    background: white;
}

.modal-input:hover {
    border-color: var(--gray-400);
}

.modal-input:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px var(--blue-50);
}

.modal-hint {
    font-size: 12px;
    color: var(--gray-500);
    line-height: 1.4;
}

.modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    padding: 16px 24px;
    border-top: 1px solid var(--gray-200);
    background: var(--gray-25);
}

/* Status Messages */
.status-message-fixed {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    border-radius: 0;
    font-size: 14px;
    font-weight: 500;
    z-index: 10000;
    display: none;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-lg);
    min-width: 300px;
    max-width: 600px;
    text-align: center;
    animation: statusSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes statusSlideIn {
    from {
        opacity: 0;
        transform: translateX(-50%) translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }
}

.status-success {
    background: var(--green-50);
    color: var(--green-600);
    border: 1px solid var(--green-500);
}

.status-error {
    background: var(--red-50);
    color: var(--red-600);
    border: 1px solid var(--red-500);
}

.status-info {
    background: var(--blue-50);
    color: var(--blue-600);
    border: 1px solid var(--blue-500);
}

/* Settings Actions */
.settings-actions {
    display: flex;
    justify-content: flex-start;
    gap: 12px;
    margin-top: 24px;
}

/* Responsive Settings */
@media (max-width: 768px) {
    .settings-content {
        max-width: 100%;
    }

    .settings-tabs {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .tab-button {
        white-space: nowrap;
    }

    .settings-card {
        padding: 20px;
    }

    .settings-card-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .input-with-button {
        flex-direction: column;
    }

    .input-with-button .form-input,
    .input-with-button .btn-secondary {
        width: 100%;
    }

    .mcp-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }

    .mcp-item-actions {
        width: 100%;
        justify-content: space-between;
    }

    .modal-dialog {
        max-width: 100%;
        margin: 0 16px;
    }

    .status-message-fixed {
        min-width: auto;
        max-width: calc(100% - 32px);
        left: 16px;
        right: 16px;
        transform: none;
    }

    @keyframes statusSlideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
}

@media (max-width: 640px) {
    .header {
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
    }

    .header-left,
    .header-right {
        width: 100%;
    }

    .header-right {
        justify-content: flex-end;
    }
}
